{
  "source": "./src",
  "destination": "./docs",
  "excludes": [
    "__tests__"
  ],
  "plugins": [
    
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "coverage": {"enable": true},
        "brand": {
          "title": "create-graphql-server-connections",
          "description": "Adds cursor based connection pagination to create-graphql-server",
          "repository": "https://github.com/tobkle/create-graphql-server-connections",
          "author": "Tobias Klemmer"
        }
      }
    },

    {
      "name": "esdoc-ecmascript-proposal-plugin",
      "option": {
        "objectRestSpread": true
      }
    },

    {
      "name": "esdoc-flow-type-plugin", 
      "option": {
        "enable": true
      }
    }

  ]
}